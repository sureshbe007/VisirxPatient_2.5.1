<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/PrimaryColor"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/patient_profile_image"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile"
        app:border_color="#0075e7"/>

    <TextView
        android:id="@+id/DashboardUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/DashboardUserID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DashboardUserName"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:text="@string/ID"
        android:gravity="left"
        android:textColor="#fff"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/DashboardUserdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/DashboardUserID1"
        android:layout_alignBottom="@+id/DashboardUserID1"
        android:layout_marginLeft="10dp"
        android:text="0007"
        android:gravity="left"
        android:textColor="#fff"
        android:textSize="14sp"/>

</RelativeLayout>