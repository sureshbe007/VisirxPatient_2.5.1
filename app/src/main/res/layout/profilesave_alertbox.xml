<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.visirx.patient.customview.MediumFont
        android:id="@+id/alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/app_name"
        android:gravity="left"
        android:padding="10sp"
        android:paddingBottom="@dimen/alert_head_bottom"
        android:paddingLeft="@dimen/alert_head_left"
        android:paddingTop="@dimen/alert_head_top"
        android:text="My Profile"
        android:textColor="@color/White"/>

    <com.visirx.patient.customview.NormalFont
        android:id="@+id/appointmentID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_dialog"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:text="Do you want save your profile ?"
        android:textColor="@color/actionBarBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentID1"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <Button
            android:id="@+id/paynow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mybutton"
            android:padding="2dp"
            android:text="Yes"
            android:textColor="@color/White"/>

        <Button
            android:id="@+id/Cancelappoint"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="@dimen/yes_margin_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/mybutton"
            android:padding="2dp"
            android:text="No"
            android:textColor="@color/White"/>
    </LinearLayout>

</RelativeLayout>
