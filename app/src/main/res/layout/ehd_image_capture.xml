<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/EMR_scroll"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.visirx.patient.customview.MediumFont
                android:id="@+id/alert_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_visirx"
                android:contentDescription="@string/app_name"
                android:gravity="left"
                android:padding="10sp"
                android:paddingBottom="@dimen/alert_head_bottom"
                android:paddingLeft="@dimen/alert_head_left"
                android:paddingTop="@dimen/alert_head_top"
                android:text="Status"
                android:textColor="@color/White"/>

            <ImageView
                android:id="@+id/emrImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>

            <EditText
                android:id="@+id/fileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Enter file name"
                android:imeOptions="actionDone"
                android:inputType="text"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/file_cancel"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/no_margin_right"
                    android:background="@drawable/mybutton"
                    android:text="No"
                    android:textColor="@color/White"/>

                <Button
                    android:id="@+id/file_yes"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/yes_margin_right"
                    android:background="@drawable/mybutton"
                    android:text="YES"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>